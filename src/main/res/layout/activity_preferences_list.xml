<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.enespc.remembertry3.PreferencesList">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pref_name"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#1e8acc"
        android:textColor="@color/tw__solid_white"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textColor="#1e8acc"
        android:text="CONFIRM"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:textSize="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personalBox"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:button="@drawable/custom_checkbox_design"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitterBox"
        android:button="@drawable/custom_checkbox_design"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/personalBox"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebookBox"
        android:layout_below="@+id/twitterBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:button="@drawable/custom_checkbox_design"
        android:checked="false" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:id="@+id/twitter"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:src="@drawable/twitter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Personal Contact Information"
        android:textSize="30dp"
        android:id="@+id/textView2" />
</RelativeLayout>
